<div class="border-form-div">
  <h2 class="text-center">Log in</h2>

  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    
        <%= f.email_field :email, required: false, autofocus: true, label: false, placeholder: "Choose your email" %>
        <%= f.password_field :password, required: false, label: false, placeholder: "Enter  your password" %>

          <%= f.submit "Log in", class: 'btn btn-danger btn-lg btn-xlarge btn-block' %>

      <% end %>

      <div class="center">
        [ <%= link_to "Don't have an account? Sign up now!", signup_path %> ]
      </div>
</div>


